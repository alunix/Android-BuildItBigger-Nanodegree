<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/instructions_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions" />

    <Button
        android:id="@+id/java_library_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructions_text_view"
        android:onClick="tellJoke"
        android:text="@string/java_library_button_text" />

    <Button
        android:id="@+id/android_library_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/java_library_button"
        android:onClick="launchJokeActivity"
        android:text="@string/android_library_button_text" />

    <Button
        android:id="@+id/android_gce_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/android_library_button"
        android:onClick="runAsyncTask"
        android:text="@string/android_gce_button_text" />

</RelativeLayout>
